{% extends "AppBundle::index.html.twig" %}

{% block corps %}
       <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Aper√ßu des performances des field soldiers</h3>
            </div>   
        <div class="table-responsive">
              <table class="table align-items-center table-flush" id="myTable">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Field Soldiers</th>
                    <th scope="col">Nombre de jour</th>
                    <th scope="col">Souscriptions</th>
                    <th scope="col">Progression</th>
                    <th scope="col">GAP</th>
                  </tr>
                </thead>
                {% set dayTarget=6 %}
                <tbody>
                  {% for user in workedDays %}
                  <tr>
                    <th scope="row">
                     {{ user.nom|e }}
                    </th>
                    <td>
                      {{ user.nombrejours }}
                    </td>
                    <td>
                      {{ user.nombre }}
                    </td>
                    <td>
                      {% if (user.nombre*100/(user.nombrejours*dayTarget))<100 %}
                      <i class="fas fa-arrow-down text-danger mr-3"></i>
                    {% else %}
                      <i class="fas fa-arrow-up text-success mr-3"></i>
                    {% endif %}
                      {{ (user.nombre*100/(user.nombrejours*dayTarget))|number_format(0, ',', '.') }}%
                    </td>
                    <td>
                    {% if (user.nombre*100/(user.nombrejours*dayTarget))<100 %}
                      
                    {% else %}
                      +
                    {% endif %}
                      {{ (user.nombre-(user.nombrejours*dayTarget))}}
                    </td>                    
                  </tr
                   {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

{% endblock %}
