{% extends "AppBundle::index.html.twig" %}

{% block corps %}
       <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Historique des rapports</h3>
            </div>   
        <div class="table-responsive">
    <table class="table align-items-center table-flush" id="myTable">
        <thead class="thead-light">
            <tr>
                <th>DATE</th>
                <th>SUPERVISEUR</th>
                <th>POINT VENTE</th>
                <th>SALES</th>
                <th>GIFT</th>
                <th>AVARIES</th>
                <th>NB BP</th>
                <th>INSIDENT</th>
                <th>C.RENDU</th>
            </tr>
        </thead>
        <tbody>
        {% for commende in commendes %}
            <tr>
                <td>
                    {% if commende.date %}{{ commende.date|date('d/m/Y') }}{% endif %}
                </td>
                <td>
                    {{ commende.user.nom }}
                </td>
                 <td>{{ commende.pointVente.nom }}</td>
                 <td>{{ commende.sales }}</td>
                 <td>{{ commende.gifts }}</td>
                 <td>{{ commende.avaries }}</td>
                 <td>{{ commende.nombreRessources }}</td>
                <td>
                    {{ commende.typeInsident }}
                </td>
                <td>
                    {{ commende.description }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
          </div>
        </div>
      </div>

{% endblock %}
